{{>_homeNavbar}}

<br><br>
<div class="container">
    <div class="row">
        <div class="col-xs-8 col-sm-8 col-md-5 col-lg-4 m-auto fundo espaco01">

            {{#each erros}}
            <div class="alert alert-danger">{{texto}}</div>
            {{else}}
            {{/each}}

            <div class="form-grup">

                <form action='/adicionar/evento/' method="POST"><br>
                    <center>
                        <h1>CRIAÇÃO DE EVENTO</h1><br>
                    </center>

                    <div>
                        <!--NOME DO EVENTO-->
                        </label for="nomeEvento"> Nome do evento:</label><br>
                        <input name="nome" class="form-control" type="text" id="nome"
                            placeholder="Informe o nome do evento">
                    </div>

                    <div>
                        <!--NÚMERO MÁXIMO DE PARTICIPANTES-->
                        <label for="numeroDeParticipantes">Numero de participantes esperados:</label><br>
                        <input class="form-control" type="number" name="participantes_esperados"
                            placeholder="Quantidade de participantes">
                    </div>

                    <div>
                        <!--QUANTIDADE DE SALAS-->
                        <label for="quantSalas">Quantidade de salas disponiveis:</label>
                        <input class="form-control" type="number" id="quantSalas" name="quantidade_salas"
                            placeholder="Número de salas">
                    </div>

                    <div>
                        <!--LOCAL DO EVENTO-->
                        <label for="local">Local do Evento:</label><br>
                        <input class="form-control" type="local" name="local_evento"
                            placeholder="Informe o local do seu evento">

                        <!--SELECIONAR A DATA-->
                        <label for="data">Data de inicio:</label>
                        <input class="form-control" id="date" type="date" name="data_inicio">
                    </div>

                    <!--DATA DE TERMINO-->
                    <div>
                        <label for="data">Data de termino:</label>
                        <input class="form-control" id="date" type="date" name="data_termino">
                    </div>

                    <div>
                        <!--GRATUITO OU PAGO-->
                        <label for="eventoTipo">Inscrição:</label>
                        <select class="form-control" name="pago" id="eventoTipo">
                            <option>--Tipo--</option>
                            <option value="false">Gratuita</option>
                            <option value="true">Paga</option>
                        </select>
                    </div>
                    <div>
                        <!--VALOR DA INSCRIÇÃO-->
                        <label for="valorEvento">R$: </label>
                        <input class="form-control" type="text" id="valorEvento" name="valor_evento" placeholder="Valor"
                            disabled>
                    </div>

                    <script>
                        var select = document.getElementById('eventoTipo'),
                            input = document.getElementById('valorEvento'),
                            tipo;
                        // CONDIÇÃO PARA DESBLOQUEAR O CAMPO DINHEIRO
                        select.addEventListener('change', function () {
                            tipo = this.value;
                            if (tipo == 'true') {
                                input.removeAttribute('disabled', false);
                            } else {
                                input.setAttribute('disabled', false);
                                input.value = null;
                            }
                        });
                    </script>
                    <br>

                    <center>
                        <button type="submit" class="btn btn-outline-secondary">Concluir</button>
                    </center>

                </form>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-20 col-sm-20 col-md-20 col-lg-20 m-auto">
            <footer>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <a href="" class="btn"><small>©Anhangüera Eventos</small></a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</div>