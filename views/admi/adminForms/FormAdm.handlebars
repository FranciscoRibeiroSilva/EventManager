<nav class="form-grup"><br>
	<div >
		<center>
			<h2>CADASTRE-SE</h2>
		</center>

		{{#each erros}}
		<div class="alert alert-danger">{{texto}}</div>
		{{else}}
		{{/each}}
		<form align-left="60px" action="/anhangueraeventos/addAdm" method="POST">

			<div class="formatacao">
				<div>
					<label for="nome">Nome:</label>
					<input class="form-control" type="text" name="nome" placeholder="Informe seu nome">
				</div>
				<!--E-Mail:<br-->
				<!---input type="text" name = ""><br>-->
				<div>
					<label for="nome">E-mail:</label>
					<input class="form-control" type="email" name="email" placeholder="Informe seu e-mail">
				</div>
				<!--Confirme o seu E-mail:<br>
							<input type="text" name="E-mail"><br><br><br-->

				<div>
					<label for="senha">Senha:</label>
					<input class="form-control" type="password" name="senha" placeholder="Informe sua senha">
				</div>

				<div>
					<label for="confirmarSenha">Confirme a sua Senha:</label>
					<input class="form-control" type="password" name="senha2" placeholder="Confirme sua senha">
				</div>

				<div>
					<label for="estado">Estado</label>
					<select class="form-control" name="estado">
						<option value="N">Selecione o estado</option>
						<option value="RJ">Rio de Janeiro</option>
						<option value="SP">São Paulo</option>
						<option value="PI">Piauí</option>
					</select>
				</div>
				<br>
				<!--Observações:<br-->
				<!--textarea></textarea><br-->
				<center>
					<button type="submit" class="btn btn-outline-secondary ">Cadastrar</button>
				</center>

			</div>
		</form>
		<footer>
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<a href="" class="btn"><small>©Anhangüera Eventos</small></a>
					</div>
				</div>

			</div>
			
		</footer>

	</div>
</nav>