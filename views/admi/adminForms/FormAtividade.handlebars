            <div class="form-grup">
                <form action='/adicionar/atividades/{{evento.id}}/' , method="POST">
                    <div>
                        <!--ATIVIDADE-->
                        <label for="nome: "> Atividade: </label>
                        <input class="form-control" type="text" id="nome" name="nome" placeholder="Nome da atividade">
                    </div>

                    <div>
                        <!--TIPO DE ATIVIDADE-->
                        <label for="tipo">Tipo:</label>
                        <select class="form-control" name="tipo_atividade">
                            <option>--Atividade--</option>
                            <option value="Palestra"> Palestra </option>
                            <option value="Curso"> Curso </option>
                            <option value="Aula"> Aula </option>
                            <option value="Conferência"> Conferência </option>
                            <option value="Mesa-Redonda"> Mesa-Redonda </option>
                        </select>
                    </div>

                    <div>
                        <!--SELECIONAR A DATA-->
                        <label for="data">Data:</label>
                        <input class="form-control" id="date" type="date" name="data">
                    </div>

                    <div>
                        <!--TIPO DE INSCRIÇÃO-->
                        <label for="inscricao">Inscrição:</label>
                        <select class="form-control" name="paga" id="paga">
                            <option>--Tipo--</option>
                            <option value="false">Gratuita</option>
                            <option value="true">Paga</option>
                        </select>
                    </div>

                    <!--
                    <label for="ministrante">Ministrante:<label>
                    <select class="form-control" name="ministrante" id="ministrante">
                        <option>ministrante</option>
                        {{# each evento.seus_ministrantes}}
                        <option value="{{nome}}">{{nome}}</option>
                        {{/each}}
                    </select>
                    -->

                    <div>
                        <!--NUMERO DE PARTICIPANTES-->
                        <label for="numeroDePartic">Participantes:</label>
                        <input class="form-control" type="number" id="vagas" name="vagas" min="0" max="1000"
                            placeholder="Número">
                    </div>

                    <div>
                        <!--VALOR DA INSCRIÇÃO-->
                        <label for="valor">R$: </label>
                        <input class="form-control" type="text" id="valor" name="valor" placeholder="R$ 00,00" disabled>
                    </div>


                    <script>
                        var select = document.getElementById('paga'),
                            input1 = document.getElementById('valor'),
                            tipo1;
                        // CONDIÇÃO PARA DESBLOQUEAR O CAMPO DINHEIRO
                        select.addEventListener('change', function () {
                            tipo1 = this.value;
                            if (tipo1 == 'true') {
                                input1.removeAttribute('disabled', false);
                            } else {
                                input1.setAttribute('disabled', false);
                                input1.value = null;
                            }
                        });
                    </script>

                    <center>
                        <br>
                        <button class="btn btn-outline-secondary" type="submit"> Concluir </button>
                    </center>
                </form>
            </div>
        </div>
