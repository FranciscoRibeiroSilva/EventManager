<nav class="form-grup"> <br><br>
	<center>
		<h2>Cadastro de usuário</h2>
		{{nomeE}}
		{{senhaE}}
	</center>
	<div class="container">
		<div class="row">
			<div class="col-xs-8 col-sm-12 col-md-7 col-lg-8 m-auto fundo espaco01">

				{{#each erros}}
				<div class="alert alert-danger">{{texto}}</div>
				{{else}}
				{{/each}}

				<form align-left="60px" action="/adicionar/usuario/" method="POST">

					<!--NOME DO ADM-->
					<div>
						<label for="nome">Nome:</label>
						<input class="form-control" type="text" name="nome" placeholder="Informe seu nome">
					</div>
					<!--E-MAIL-->
					<div>
						<label for="nome">E-mail:</label>
						<input class="form-control" type="email" name="email" placeholder="Informe seu e-mail">
					</div>
					<!--SENHA-->
					<div>
						<label for="senha">Senha:</label>
						<input class="form-control" type="password" name="senha" placeholder="Informe sua senha">
					</div>
					<!--CONFIRMAÇÃO DA SENHA-->
					<div>
						<label for="confirmarSenha">Confirme a sua Senha:</label>
						<input class="form-control" type="password" name="senha2" placeholder="Confirme sua senha">
					</div>
					<!--ESTADO-->
					<!--div>
						<label for="estado">Estado</label>
						<select class="form-control" name="estado">
							<option value="N">Selecione o estado</option>
							<option value="RJ">Rio de Janeiro</option>
							<option value="SP">São Paulo</option>
							<option value="PI">Piauí</option>
						</select>
					</div><br-->

					<!--FUNÇÃO QUE HABILITA O BOTÃO DE CADASTRAR-->
					<script>
						function muda(el, id) {
							document.getElementById(id).disabled = !el.checked;
						}
					</script>

					<center>
						<input type="checkbox" id="btn" onchange="muda(this, 'botao');">
						<label> Aceitar os </label>
						<a href=""> Termos e Condições de Uso</a><br>
						<button type="text" name="botao" id="botao" disabled="true" class="btn btn-outline-secondary">
							Cadastrar
						</button>
					</center>
					
				</form>
			</div>
		</div>
	</div>
</nav>

