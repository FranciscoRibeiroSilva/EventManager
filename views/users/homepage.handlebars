    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 m-auto">

            <div class="mt-3">
                <center>
                    <h2>
                        <p> Seus eventos </p>
                    </h2>
                </center>

                <a href="/adicionar/evento"><button class="btn btn-outline-secondary">Criar Evento</button></a>
