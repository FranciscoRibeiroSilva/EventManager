{{>_navbar}}
<div>
    <form action='/anhangueraeventos/addAtividade' , method="POST">
        <center>
            <h1>Registro de Atividades</h1>

            <div>
                <span>
                    &emsp;
                    <label for="nome: "> Atividade: </label>
                    <input type="text" id="nome" name="nome" placeholder="Nome da atividade">
                </span>

                <span>
                    &emsp;
                    Tipo:
                    <select name="tipo">
                        <option>--Atividade--</option>
                        <option value="Palestra"> Palestra </option>
                        <option value="Curso"> Curso </option>
                        <option value="Aula"> Aula </option>
                        <option value="Conferência"> Conferência </option>
                        <option value="Mesa-Redonda"> Mesa-Redonda </option>
                    </select>
                </span>
            </div>

            <div>
                <span>
                    &emsp;
                    <label for="ministrar"> Ministrante: </label>
                    <input type="text" name="ministrante" placeholder="Nome do ministrante">
                </span>

                <span>
                    &emsp;
                    Data:
                    <input id="date" type="date" name="data">
                </span>
            </div>

            <div>
                <span>
                    &emsp;
                    <label for="appt"> Horário inicio: </label>
                    <input type="time" id="appt" name="horaInicio" min="01:00" max="23:50" required>
                </span>

                <span>
                    &emsp;
                    <label for="appt"> Horário final: </label>
                    <input type="time" id="appt" name="horaFinal" min="01:00" max="23:50" required>
                </span>
            </div>

            <div>
                <span>
                    &emsp;
                    Sala:
                    <select name="sala">
                        <option>--Informe a sala--</option>
                        <option value="SALA 1">Sala 1</option>
                        <option value="SALA 2">Sala 2</option>
                        <option value="SALA 3">Sala 3</option>
                        <option value="SALA 4">Sala 4</option>
                        <option value="SALA 5">Sala 5</option>
                        <option value="SALA 6">Sala 6</option>
                        <option value="SALA 7">Sala 7</option>
                        <option value="SALA 8">Sala 8</option>
                        <option value="SALA 9">Sala 9</option>
                        <option value="SALA 10">Sala 10</option>
                    </select>
                </span>

                <span>
                    &emsp;
                    Carga Horário:
                    <select name="ch">
                        <option>--Informe a CH--</option>
                        <option value="10 Horas">10 Horas</option>
                        <option value="20 Horas">20 horas</option>
                        <option value="30 Horas">30 horas</option>
                        <option value="40 Horas">40 horas</option>
                        <option value="50 Horas">50 horas</option>
                    </select>
                </span>
            </div>

            <div>
                <span>
                    &emsp;
                    Inscrição:
                    <select name= "inscricaoT" id="inscricao">
                        <option>--Tipo--</option>
                        <option value="Gratuita">Gratuita</option>
                        <option value="Paga">Paga</option>
                    </select>
                </span>
                <span>
                    &emsp;
                    <label for="numeroDePartic"> Participantes: </label>
                    <input type="number" id="numeroDePartic" name="numeroDePartic" min="0" max="30" placeholder="Nº">
                </span>
            </div>

            <div>
                </script>

                <span>
                    &emsp;
                    <label for="valor">R$: </label>
                    <input type="text" id="valor" name="valor" placeholder="Valor de inscrição" disabled>
                    &emsp;
                    <label for="desconto"> Cupons: </label>
                    <input type="number" id="desconto" name="desconto" min="0" max="30" placeholder="Nº" disabled>
                    &emsp;
                    <label for="prazo"> Prazo: </label>
                    <input type="datetime-local" id="prazo" name="prazo" disabled>
                </span>
                </span>

                <h1>Dados Bancarios</h1>

                <span>
                    &emsp;
                    <label for="numConta"> Conta: </label>
                    <input type="text" id="numConta" name="numConta" placeholder="Nº da conta" disabled>

                    &emsp;
                    <label for="banco"> Banco: </label>
                    <input type="text" id="banco" name="banco"placeholder="Nome do Banco" disabled>

                </span>
                <br>
                <span>
                    &emsp;
                    <label for="agencia"> Agência: </label>
                    <input type="text" id="agencia"name="agencia" placeholder="Número da agência" disabled>

                    &emsp;
                    <label for="cpf"> CPF: </label>
                    <input type="text" id="cpf" name="cpf"placeholder="000-000-000-00" disabled>
                </span>

                <script>
                    var select = document.getElementById('inscricao'),
                        input1 = document.getElementById('valor'),
                        tipo1;
                    var select = document.getElementById('inscricao'),
                        input2 = document.getElementById('desconto'),
                        tipo2;
                    var select = document.getElementById('inscricao'),
                        input3 = document.getElementById('numConta'),
                        tipo3;
                    var select = document.getElementById('inscricao'),
                        input4 = document.getElementById('cpf'),
                        tipo4;
                    var select = document.getElementById('inscricao'),
                        input5 = document.getElementById('agencia'),
                        tipo5;
                    var select = document.getElementById('inscricao'),
                        input6 = document.getElementById('banco'),
                        tipo6;
                    var select = document.getElementById('inscricao'),
                        input7 = document.getElementById('prazo'),
                        tipo7;

                    // CONDIÇÃO PARA DESBLOQUEAR O CAMPO DINHEIRO
                    select.addEventListener('change', function () {
                        tipo1 = this.value;
                        if (tipo1 == 'Paga') {
                            input1.removeAttribute('disabled', false);
                        } else {
                            input1.setAttribute('disabled', false);
                            input1.value = null;
                        }
                    });
                    // CONDIÇÃO PARA DESBLOQUEAR O CAMPO CUPONS
                    select.addEventListener('change', function () {
                        tipo2 = this.value;
                        if (tipo2 == 'Paga') {
                            input2.removeAttribute('disabled', false);
                        } else {
                            input2.setAttribute('disabled', false);
                            input2.value = null;
                        }
                    });
                    // CONDIÇÃO PARA DESBLOQUEAR O CAMPO NUMERO CONTA
                    select.addEventListener('change', function () {
                        tipo3 = this.value;
                        if (tipo3 == 'Paga') {
                            input3.removeAttribute('disabled', false);
                        } else {
                            input3.setAttribute('disabled', false);
                            input3.value = null;
                        }
                    });
                    // CONDIÇÃO PARA DESBLOQUEAR O CAMPO CPF
                    select.addEventListener('change', function () {
                        tipo4 = this.value;
                        if (tipo4 == 'Paga') {
                            input4.removeAttribute('disabled', false);
                        } else {
                            input4.setAttribute('disabled', false);
                            input4.value = null;
                        }
                    });
                    // CONDIÇÃO PARA DESBLOQUEAR O CAMPO NUMERO AGENCIA
                    select.addEventListener('change', function () {
                        tipo5 = this.value;
                        if (tipo5 == 'Paga') {
                            input5.removeAttribute('disabled', false);
                        } else {
                            input5.setAttribute('disabled', false);
                            input5.value = null;
                        }
                    });
                    // CONDIÇÃO PARA DESBLOQUEAR O CAMPO BANCO
                    select.addEventListener('change', function () {
                        tipo6 = this.value;
                        if (tipo6 == 'Paga') {
                            input6.removeAttribute('disabled', false);
                        } else {
                            input6.setAttribute('disabled', false);
                            input6.value = null;
                        }
                    });
                     // CONDIÇÃO PARA DESBLOQUEAR O CAMPO PRAZO PAGAMENTO
                    select.addEventListener('change', function () {
                        tipo7 = this.value;
                        if (tipo7 == 'Paga') {
                            input7.removeAttribute('disabled', false);
                        } else {
                            input7.setAttribute('disabled', false);
                            input7.value = null;
                        }
                    });
                </script>
                </span>
            </div>

            <div>
                <br>
                <button> Concluir </button>
            </div>

        </center>
    </form>
</div>