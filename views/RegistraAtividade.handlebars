{{>_navbar}}
<div>
    <form action='/anhangueraeventos/addAtividade' , method="POST">
        <center>
            <h1>Registro de Atividades</h1>

            <div>
                <span>
                    &emsp;
                    <label for="nome: "> Atividade: </label>
                    <input type="text" id="nome" name="nome" placeholder="Nome da atividade">
                </span>

                <span>
                    &emsp;
                    Tipo:
                    <select name="tipo">
                        <option value="informe">--Atividade--</option>
                        <option value="palestra"> Palestra </option>
                        <option value="curso"> Curso </option>
                        <option value="aula"> Aula </option>
                        <option value="conferencia"> Conferência </option>
                        <option value="sesaRedonda"> Mesa-Redonda </option>
                    </select>
                </span>
            </div>

            <div>
                <span>
                    &emsp;
                    <label for="ministrar"> Ministrante: </label>
                    <input type="text" name="ministrante" placeholder="Nome do ministrante">
                </span>

                <span>
                    &emsp;
                    Data:
                    <input id="date" type="date" name="data">
                </span>
            </div>

            <div>
                <span>
                    &emsp;
                    <label for="appt"> Horário inicio: </label>
                    <input type="time" id="appt" name="horaInicio" min="01:00" max="23:50" required>
                </span>

                <span>
                    &emsp;
                    <label for="appt"> Horário final: </label>
                    <input type="time" id="appt" name="horaFinal" min="01:00" max="23:50" required>
                </span>
            </div>

            <div>
                <span>
                    &emsp;
                    Sala:
                    <select name="sala">
                        <option value="s1">--Informe a sala--</option>
                        <option value="s1">Sala 1</option>
                        <option value="s2">Sala 2</option>
                        <option value="s3">Sala 3</option>
                        <option value="s4">Sala 4</option>
                        <option value="s5">Sala 5</option>
                        <option value="s6">Sala 6</option>
                        <option value="s7">Sala 7</option>
                        <option value="s8">Sala 8</option>
                        <option value="s9">Sala 9</option>
                        <option value="s10">Sala 10</option>
                    </select>
                </span>

                <span>
                    &emsp;
                    Carga Horário:
                    <select name="ch">
                        <option value="informe">--Informe a CH--</option>
                        <option value="10">10 Horas</option>
                        <option value="20">20 horas</option>
                        <option value="30">30 horas</option>
                        <option value="s1">40 horas</option>
                    </select>
                </span>
            </div>

            <div>
                <span>
                    &emsp;
                    Inscrição:
                    <select id="inscricao">
                        <option value="informe">--Tipo--</option>
                        <option>Gratuita</option>
                        <option value="paga">Paga</option>
                    </select>
                </span>
                <span>
                    &emsp;
                    <label for="quantidade"> Participantes: </label>
                    <input type="number" name="quantidade" min="1" max="50" placeholder="Nº">
                </span>
            </div>

            <div>
                </script>

                <span>
                    &emsp;
                    <label for="valor">R$: </label>
                    <input type="text" id="valor" placeholder="Valor de inscrição" disabled>
                    &emsp;
                    <label for="desconto"> Cupons: </label>
                    <input type="number" id="desconto" min="0" max="30" placeholder="Nº" disabled>
                    &emsp;
                    <label for="prazo"> Prazo: </label>
                    <input type="datetime-local" id="prazo" name="bdaytime" disabled>
                </span>
                </span>

                <h1>Dados Bancarios</h1>

                <span>
                    &emsp;
                    <label for="numeroConta"> Conta: </label>
                    <input type="text" id="numeroConta" placeholder="Nº da conta" disabled>

                    &emsp;
                    <label for="banco"> Banco: </label>
                    <input type="text" id="banco" placeholder="Nome do Banco" disabled>

                </span>
                <br>
                <span>
                    &emsp;
                    <label for="numeroAgencia"> Agência: </label>
                    <input type="text" id="numeroAgencia" placeholder="Número da agência" disabled>

                    &emsp;
                    <label for="cpf"> CPF: </label>
                    <input type="text" id="cpf" placeholder="000-000-000-00" disabled>
                </span>

                <script>
                    var select = document.getElementById('inscricao'),
                        input1 = document.getElementById('valor'),
                        tipo1;
                    var select = document.getElementById('inscricao'),
                        input2 = document.getElementById('desconto'),
                        tipo2;
                    var select = document.getElementById('inscricao'),
                        input3 = document.getElementById('numeroConta'),
                        tipo3;
                    var select = document.getElementById('inscricao'),
                        input4 = document.getElementById('cpf'),
                        tipo4;
                    var select = document.getElementById('inscricao'),
                        input5 = document.getElementById('numeroAgencia'),
                        tipo5;
                    var select = document.getElementById('inscricao'),
                        input6 = document.getElementById('banco'),
                        tipo6;
                    var select = document.getElementById('inscricao'),
                        input7 = document.getElementById('prazo'),
                        tipo7;

                    // CONDIÇÃO PARA DESBLOQUEAR O CAMPO DINHEIRO
                    select.addEventListener('change', function () {
                        tipo1 = this.value;
                        if (tipo1 == 'paga') {
                            input1.removeAttribute('disabled', false);
                        } else {
                            input1.setAttribute('disabled', false);
                            input1.value = null;
                        }
                    });
                    // CONDIÇÃO PARA DESBLOQUEAR O CAMPO CUPONS
                    select.addEventListener('change', function () {
                        tipo2 = this.value;
                        if (tipo2 == 'paga') {
                            input2.removeAttribute('disabled', false);
                        } else {
                            input2.setAttribute('disabled', false);
                            input2.value = null;
                        }
                    });
                    // CONDIÇÃO PARA DESBLOQUEAR O CAMPO NUMERO CONTA
                    select.addEventListener('change', function () {
                        tipo3 = this.value;
                        if (tipo3 == 'paga') {
                            input3.removeAttribute('disabled', false);
                        } else {
                            input3.setAttribute('disabled', false);
                            input3.value = null;
                        }
                    });
                    // CONDIÇÃO PARA DESBLOQUEAR O CAMPO CPF
                    select.addEventListener('change', function () {
                        tipo4 = this.value;
                        if (tipo4 == 'paga') {
                            input4.removeAttribute('disabled', false);
                        } else {
                            input4.setAttribute('disabled', false);
                            input4.value = null;
                        }
                    });
                    // CONDIÇÃO PARA DESBLOQUEAR O CAMPO NUMERO AGENCIA
                    select.addEventListener('change', function () {
                        tipo5 = this.value;
                        if (tipo5 == 'paga') {
                            input5.removeAttribute('disabled', false);
                        } else {
                            input5.setAttribute('disabled', false);
                            input5.value = null;
                        }
                    });
                    // CONDIÇÃO PARA DESBLOQUEAR O CAMPO BANCO
                    select.addEventListener('change', function () {
                        tipo6 = this.value;
                        if (tipo6 == 'paga') {
                            input6.removeAttribute('disabled', false);
                        } else {
                            input6.setAttribute('disabled', false);
                            input6.value = null;
                        }
                    });
                     // CONDIÇÃO PARA DESBLOQUEAR O CAMPO PRAZO PAGAMENTO
                    select.addEventListener('change', function () {
                        tipo7 = this.value;
                        if (tipo7 == 'paga') {
                            input7.removeAttribute('disabled', false);
                        } else {
                            input7.setAttribute('disabled', false);
                            input7.value = null;
                        }
                    });
                </script>
                </span>
            </div>

            <div>
                <br>
                <button> Concluir </button>
            </div>

        </center>
    </form>
</div>