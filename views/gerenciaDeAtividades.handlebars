{{>_navbar}}
<div class="mt-4">
    <button class="btn btn-outline-secondary"> <a href='/anhangueraeventos/formAtividades'>Adicionar Atividade</a> </button>
    
    {{#each regist}}
        <div class="card mt-2">
            <div class="card-body">
                <h3><p>Nome da ativida: {{nome}}</p></h3>
                <small><p>Tipo de Atividade: {{tipo}}   Ministrante: {{ministrante}}</p>
                <p>Sala: {{sala}}   Participates: {{numeroDePartic}} Carga horaria: {{cargaHoraria}}</p>
                <p>Tipo de inscrição: {{inscricaoT}}</p></small>
                <a href='/anhangueraeventos/removeAtividade/{{id}}'><button class="btn btn-outline-secondary">Remover atividade</button></a>
                <a href='/anhangueraeventos/formModifica/{{id}}'><button class="btn btn-outline-secondary"> Modificar atividade </button></a>
            </div>
        </div>
    {{/each}}
</div>